      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "divider_color",
      "label": "Divider color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Comparison banner"
    }
  ]
}
{% endschema %}
