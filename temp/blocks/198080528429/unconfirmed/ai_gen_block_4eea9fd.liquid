{% doc %}
  @prompt
    A product card that includes the product image at the top, then the price and title below. Add a smooth holographic shimmer effect and a shadow. Featured product
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-card-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    box-shadow: 0 {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 {{ block.settings.shadow_vertical | plus: 4 }}px {{ block.settings.shadow_blur | plus: 8 }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 | plus: 0.1 }});
  }

  .ai-product-card-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    aspect-ratio: 1 / 1;
  }

  .ai-product-card-image-wrapper-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      45deg,
      transparent 30%,
      rgba(255, 255, 255, 0.1) 40%,
      rgba(255, 255, 255, 0.3) 45%,
      rgba(255, 0, 255, 0.2) 50%,
      rgba(0, 255, 255, 0.2) 55%,
      rgba(255, 255, 255, 0.3) 60%,
      rgba(255, 255, 255, 0.1) 70%,
      transparent 80%
    );
    animation: ai-holographic-shimmer-{{ ai_gen_id }} {{ block.settings.shimmer_speed }}s linear infinite;
    pointer-events: none;
    z-index: 2;
  }

  @keyframes ai-holographic-shimmer-{{ ai_gen_id }} {
    0% {
      transform: translate(-50%, -50%) rotate(0deg);
    }
    100% {
      transform: translate(50%, 50%) rotate(360deg);
    }
  }

  .ai-product-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-product-card-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-card-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-product-card-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-product-card-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    font-weight: 600;
    color: {{ block.settings.price_color }};
    margin: 0;
  }

  .ai-product-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 400;
    color: {{ block.settings.title_color }};
    margin: 0;
    line-height: 1.4;
  }

  .ai-product-card-link-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .ai-product-card-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    z-index: 3;
  }
{% endstyle %}

<product-card-{{ ai_gen_id }} class="ai-product-card-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.featured_product != blank %}
    <a href="{{ block.settings.featured_product.url }}" class="ai-product-card-link-{{ ai_gen_id }}">
      <div class="ai-product-card-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.featured_product.featured_image %}
          <img
            src="{{ block.settings.featured_product.featured_image | image_url: width: 800 }}"
            alt="{{ block.settings.featured_product.featured_image.alt | escape }}"
            class="ai-product-card-image-{{ ai_gen_id }}"
            loading="lazy"
            width="800"
            height="800"
          >
        {% else %}
          <div class="ai-product-card-placeholder-{{ ai_gen_id }}">
            {{ 'product-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      <div class="ai-product-card-content-{{ ai_gen_id }}">
        <p class="ai-product-card-price-{{ ai_gen_id }}">
          {{ block.settings.featured_product.price | money }}
        </p>
        <h3 class="ai-product-card-title-{{ ai_gen_id }}">
          {{ block.settings.featured_product.title }}
        </h3>
      </div>
    </a>
  {% else %}
    <div class="ai-product-card-image-wrapper-{{ ai_gen_id }}">
      <div class="ai-product-card-placeholder-{{ ai_gen_id }}">
        {{ 'product-1' | placeholder_svg_tag }}
      </div>
      <div class="ai-product-card-empty-state-{{ ai_gen_id }}">
        Next, select a featured product
      </div>
    </div>
    <div class="ai-product-card-content-{{ ai_gen_id }}">
      <p class="ai-product-card-price-{{ ai_gen_id }}">$0.00</p>
      <h3 class="ai-product-card-title-{{ ai_gen_id }}">Product title</h3>
    </div>
  {% endif %}
</product-card-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductCard{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('product-card-{{ ai_gen_id }}', ProductCard{{ ai_gen_id }});
  })();
</script>

