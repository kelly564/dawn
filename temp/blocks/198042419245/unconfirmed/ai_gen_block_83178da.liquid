    }
  }
{% endstyle %}

<mini-countdown-timer-{{ ai_gen_id }}
  class="ai-mini-countdown-{{ ai_gen_id }}"
  data-end-date="{{ block.settings.end_date }}"
  data-end-time="{{ block.settings.end_time }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.heading != blank %}
    <div class="ai-mini-countdown-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</div>
  {% endif %}

  <div class="ai-mini-countdown-timer-{{ ai_gen_id }}" data-timer>
    {% if block.settings.show_days %}
      <div class="ai-mini-countdown-unit-{{ ai_gen_id }}">
        <div class="ai-mini-countdown-number-{{ ai_gen_id }}" data-days>00</div>
        {% if block.settings.show_labels %}
          <div class="ai-mini-countdown-label-{{ ai_gen_id }}">{{ block.settings.days_label }}</div>
        {% endif %}
      </div>
      {% if block.settings.show_separator %}
        <div class="ai-mini-countdown-separator-{{ ai_gen_id }}">:</div>
      {% endif %}
    {% endif %}

    <div class="ai-mini-countdown-unit-{{ ai_gen_id }}">
      <div class="ai-mini-countdown-number-{{ ai_gen_id }}" data-hours>00</div>
      {% if block.settings.show_labels %}
        <div class="ai-mini-countdown-label-{{ ai_gen_id }}">{{ block.settings.hours_label }}</div>
      {% endif %}
    </div>

    {% if block.settings.show_separator %}
      <div class="ai-mini-countdown-separator-{{ ai_gen_id }}">:</div>
    {% endif %}

    <div class="ai-mini-countdown-unit-{{ ai_gen_id }}">
      <div class="ai-mini-countdown-number-{{ ai_gen_id }}" data-minutes>00</div>
      {% if block.settings.show_labels %}
        <div class="ai-mini-countdown-label-{{ ai_gen_id }}">{{ block.settings.minutes_label }}</div>
      {% endif %}
    </div>

    {% if block.settings.show_seconds %}
      {% if block.settings.show_separator %}
        <div class="ai-mini-countdown-separator-{{ ai_gen_id }}">:</div>
      {% endif %}
      <div class="ai-mini-countdown-unit-{{ ai_gen_id }}">
        <div class="ai-mini-countdown-number-{{ ai_gen_id }}" data-seconds>00</div>
        {% if block.settings.show_labels %}
          <div class="ai-mini-countdown-label-{{ ai_gen_id }}">{{ block.settings.seconds_label }}</div>
        {% endif %}
      </div>
    {% endif %}
  </div>

  {% if block.settings.expired_message != blank %}
    <div class="ai-mini-countdown-expired-{{ ai_gen_id }}" data-expired>
      {{ block.settings.expired_message }}
    </div>
  {% endif %}
</mini-countdown-timer-{{ ai_gen_id }}>

<script>
  (function() {
    class MiniCountdownTimer{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.timer = null;
      }

      connectedCallback() {
        const endDate = this.dataset.endDate;
        const endTime = this.dataset.endTime;
        
        if (!endDate || !endTime) {
          return;
        }

        const endDateTime = new Date(endDate + ' ' + endTime).getTime();
        
        this.timerElement = this.querySelector('[data-timer]');
        this.expiredElement = this.querySelector('[data-expired]');
        this.daysElement = this.querySelector('[data-days]');
        this.hoursElement = this.querySelector('[data-hours]');
        this.minutesElement = this.querySelector('[data-minutes]');
        this.secondsElement = this.querySelector('[data-seconds]');

        this.updateCountdown(endDateTime);
        
        this.timer = setInterval(() => {
          this.updateCountdown(endDateTime);
        }, 1000);
      }

      updateCountdown(endDateTime) {
        const now = new Date().getTime();
        const distance = endDateTime - now;

        if (distance < 0) {
          clearInterval(this.timer);
          if (this.timerElement) {
            this.timerElement.classList.add('hidden');
          }
          if (this.expiredElement) {
            this.expiredElement.classList.add('active');
          }
          return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        if (this.daysElement) {
          this.daysElement.textContent = String(days).padStart(2, '0');
        }
        if (this.hoursElement) {
          this.hoursElement.textContent = String(hours).padStart(2, '0');
        }
        if (this.minutesElement) {
          this.minutesElement.textContent = String(minutes).padStart(2, '0');
        }
        if (this.secondsElement) {
          this.secondsElement.textContent = String(seconds).padStart(2, '0');
        }
      }

      disconnectedCallback() {
        if (this.timer) {
          clearInterval(this.timer);
        }
      }
    }

    customElements.define('mini-countdown-timer-{{ ai_gen_id }}', MiniCountdownTimer{{ ai_gen_id }});
  })();
</script>

