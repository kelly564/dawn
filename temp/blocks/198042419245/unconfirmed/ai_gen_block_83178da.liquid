{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-mini-countdown-{{ ai_gen_id }} {
    position: fixed;
    {{ block.settings.position_vertical }}: {{ block.settings.offset_vertical }}px;
    {{ block.settings.position_horizontal }}: {{ block.settings.offset_horizontal }}px;
    z-index: 999;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px;
    border-radius: {{ block.settings.border_radius }}px;
    box-shadow: 0 {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
  }

  .ai-mini-countdown-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    text-align: center;
    text-transform: {{ block.settings.text_transform }};
  }

  .ai-mini-countdown-timer-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.timer_gap }}px;
    align-items: center;
    justify-content: center;
  }

  .ai-mini-countdown-unit-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .ai-mini-countdown-number-{{ ai_gen_id }} {
    font-size: {{ block.settings.number_size }}px;
    font-weight: {{ block.settings.number_weight }};
    color: {{ block.settings.number_color }};
    line-height: 1;
    background-color: {{ block.settings.number_bg_color }};
    padding: {{ block.settings.number_padding }}px;
    border-radius: {{ block.settings.number_border_radius }}px;
    min-width: {{ block.settings.number_min_width }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-mini-countdown-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_size }}px;
    font-weight: {{ block.settings.label_weight }};
    color: {{ block.settings.label_color }};
    margin-top: {{ block.settings.label_spacing }}px;
    text-transform: {{ block.settings.label_transform }};
  }

  .ai-mini-countdown-separator-{{ ai_gen_id }} {
    font-size: {{ block.settings.number_size }}px;
    font-weight: {{ block.settings.number_weight }};
    color: {{ block.settings.number_color }};
    line-height: 1;
  }

  .ai-mini-countdown-expired-{{ ai_gen_id }} {
    font-size: {{ block.settings.expired_size }}px;
    font-weight: {{ block.settings.expired_weight }};
    color: {{ block.settings.expired_color }};
    text-align: center;
    display: none;
  }

  .ai-mini-countdown-expired-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-mini-countdown-timer-{{ ai_gen_id }}.hidden {
    display: none;
  }

  @media screen and (max-width: 749px) {
    .ai-mini-countdown-{{ ai_gen_id }} {
      {{ block.settings.position_vertical }}: {{ block.settings.offset_vertical | times: 0.5 }}px;
      {{ block.settings.position_horizontal }}: {{ block.settings.offset_horizontal | times: 0.5 }}px;
      padding: {{ block.settings.padding | times: 0.7 }}px;
    }

