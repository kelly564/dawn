{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-countdown-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    text-align: center;
  }

  .ai-countdown-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-countdown-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    text-transform: {{ block.settings.text_transform }};
  }

  .ai-countdown-timer-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: {{ block.settings.timer_gap }}px;
    flex-wrap: wrap;
  }

  .ai-countdown-unit-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: {{ block.settings.unit_min_width }}px;
  }

  .ai-countdown-number-{{ ai_gen_id }} {
    font-size: {{ block.settings.number_size }}px;
    font-weight: {{ block.settings.number_weight }};
    color: {{ block.settings.number_color }};
    line-height: 1;
    background-color: {{ block.settings.number_bg_color }};
    padding: {{ block.settings.number_padding }}px;
    border-radius: {{ block.settings.number_border_radius }}px;
    min-width: {{ block.settings.number_min_width }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: {{ block.settings.number_border_width }}px solid {{ block.settings.number_border_color }};
  }

  .ai-countdown-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.label_size }}px;
    font-weight: {{ block.settings.label_weight }};
    color: {{ block.settings.label_color }};
    margin-top: {{ block.settings.label_spacing }}px;
    text-transform: {{ block.settings.label_transform }};
  }

  .ai-countdown-expired-{{ ai_gen_id }} {
    font-size: {{ block.settings.expired_size }}px;
    font-weight: {{ block.settings.expired_weight }};
    color: {{ block.settings.expired_color }};
    display: none;
  }

  .ai-countdown-expired-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-countdown-timer-{{ ai_gen_id }}.hidden {
    display: none;
  }

  @media screen and (max-width: 749px) {
    .ai-countdown-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-countdown-number-{{ ai_gen_id }} {
      font-size: {{ block.settings.number_size | times: 0.7 }}px;
      padding: {{ block.settings.number_padding | times: 0.7 }}px;
      min-width: {{ block.settings.number_min_width | times: 0.8 }}px;
    }

    .ai-countdown-label-{{ ai_gen_id }} {
      font-size: {{ block.settings.label_size | times: 0.8 }}px;
    }

    .ai-countdown-timer-{{ ai_gen_id }} {
      gap: {{ block.settings.timer_gap | times: 0.7 }}px;
    }

    .ai-countdown-unit-{{ ai_gen_id }} {
      min-width: {{ block.settings.unit_min_width | times: 0.8 }}px;
    }
  }
{% endstyle %}

<countdown-timer-{{ ai_gen_id }}
  class="ai-countdown-{{ ai_gen_id }}"
  data-end-date="{{ block.settings.end_date }}"
  data-end-time="{{ block.settings.end_time }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-countdown-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-countdown-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-countdown-timer-{{ ai_gen_id }}" data-timer>
      <div class="ai-countdown-unit-{{ ai_gen_id }}">
        <div class="ai-countdown-number-{{ ai_gen_id }}" data-days>00</div>
        <div class="ai-countdown-label-{{ ai_gen_id }}">{{ block.settings.days_label }}</div>
      </div>

      <div class="ai-countdown-unit-{{ ai_gen_id }}">
        <div class="ai-countdown-number-{{ ai_gen_id }}" data-hours>00</div>
        <div class="ai-countdown-label-{{ ai_gen_id }}">{{ block.settings.hours_label }}</div>
      </div>

      <div class="ai-countdown-unit-{{ ai_gen_id }}">
        <div class="ai-countdown-number-{{ ai_gen_id }}" data-minutes>00</div>
        <div class="ai-countdown-label-{{ ai_gen_id }}">{{ block.settings.minutes_label }}</div>
      </div>

      <div class="ai-countdown-unit-{{ ai_gen_id }}">
        <div class="ai-countdown-number-{{ ai_gen_id }}" data-seconds>00</div>
        <div class="ai-countdown-label-{{ ai_gen_id }}">{{ block.settings.seconds_label }}</div>
      </div>
    </div>

    {% if block.settings.expired_message != blank %}
      <div class="ai-countdown-expired-{{ ai_gen_id }}" data-expired>
        {{ block.settings.expired_message }}
      </div>
    {% endif %}
  </div>
</countdown-timer-{{ ai_gen_id }}>

<script>
  (function() {
    class CountdownTimer{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.timer = null;
      }

      connectedCallback() {
        const endDate = this.dataset.endDate;
        const endTime = this.dataset.endTime;
        
        if (!endDate || !endTime) {
          return;
        }

        const endDateTime = new Date(endDate + ' ' + endTime).getTime();
        
        this.timerElement = this.querySelector('[data-timer]');
        this.expiredElement = this.querySelector('[data-expired]');
        this.daysElement = this.querySelector('[data-days]');
        this.hoursElement = this.querySelector('[data-hours]');
        this.minutesElement = this.querySelector('[data-minutes]');
        this.secondsElement = this.querySelector('[data-seconds]');

        this.updateCountdown(endDateTime);
        
        this.timer = setInterval(() => {
          this.updateCountdown(endDateTime);
        }, 1000);
      }

      updateCountdown(endDateTime) {
        const now = new Date().getTime();
        const distance = endDateTime - now;

        if (distance < 0) {
          clearInterval(this.timer);
          if (this.timerElement) {
            this.timerElement.classList.add('hidden');
          }
          if (this.expiredElement) {
            this.expiredElement.classList.add('active');
          }
          return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        if (this.daysElement) {
          this.daysElement.textContent = String(days).padStart(2, '0');
        }
        if (this.hoursElement) {
          this.hoursElement.textContent = String(hours).padStart(2, '0');
        }
        if (this.minutesElement) {
          this.minutesElement.textContent = String(minutes).padStart(2, '0');
        }
        if (this.secondsElement) {
          this.secondsElement.textContent = String(seconds).padStart(2, '0');
        }
      }

      disconnectedCallback() {
        if (this.timer) {
          clearInterval(this.timer);
        }
      }
    }

    customElements.define('countdown-timer-{{ ai_gen_id }}', CountdownTimer{{ ai_gen_id }});
  })();
</script>

