{% doc %}
  @prompt
    black friday 35% off small black and white banner dynamic et revolutionnaire
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-bf-banner-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .ai-bf-banner-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ block.settings.text_spacing }}px;
    flex-wrap: wrap;
  }

  .ai-bf-banner-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    text-transform: {{ block.settings.text_transform }};
    margin: 0;
  }

  .ai-bf-banner-discount-{{ ai_gen_id }} {
    font-size: {{ block.settings.discount_size }}px;
    font-weight: {{ block.settings.discount_weight }};
    color: {{ block.settings.discount_color }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
  }

  .ai-bf-banner-cta-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: {{ block.settings.button_text_weight }};
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-bf-banner-cta-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-bf-banner-stripe-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
  }

  .ai-bf-banner-stripe-{{ ai_gen_id }}::before,
  .ai-bf-banner-stripe-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    width: 200%;
    height: 100%;
    top: 0;
    background: repeating-linear-gradient(
      {{ block.settings.stripe_angle }}deg,
      transparent,
      transparent {{ block.settings.stripe_width }}px,
      {{ block.settings.stripe_color }} {{ block.settings.stripe_width }}px,
      {{ block.settings.stripe_color }} calc({{ block.settings.stripe_width }}px * 2)
    );
    opacity: {{ block.settings.stripe_opacity | divided_by: 100.0 }};
  }

  .ai-bf-banner-stripe-{{ ai_gen_id }}::before {
    left: -50%;
  }

  @media screen and (max-width: 749px) {
    .ai-bf-banner-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px;
    }

    .ai-bf-banner-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.8 }}px;
    }

    .ai-bf-banner-discount-{{ ai_gen_id }} {
      font-size: {{ block.settings.discount_size | times: 0.8 }}px;
    }

    .ai-bf-banner-cta-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_text_size | times: 0.9 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-bf-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.show_stripes %}
    <div class="ai-bf-banner-stripe-{{ ai_gen_id }}"></div>
  {% endif %}
  
  <div class="ai-bf-banner-content-{{ ai_gen_id }}">
    {% if block.settings.banner_text != blank %}
      <span class="ai-bf-banner-text-{{ ai_gen_id }}">{{ block.settings.banner_text }}</span>
    {% endif %}
    
    {% if block.settings.show_discount %}
      <span class="ai-bf-banner-discount-{{ ai_gen_id }}">{{ block.settings.discount_text }}</span>
    {% endif %}
    
    {% if block.settings.show_cta and block.settings.cta_text != blank %}
      <a href="{{ block.settings.cta_link }}" class="ai-bf-banner-cta-{{ ai_gen_id }}">
        {{ block.settings.cta_text }}
      </a>
    {% endif %}
  </div>
</div>

