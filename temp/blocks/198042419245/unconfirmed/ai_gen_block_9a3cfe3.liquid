    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-bionic-hand-massager__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: start;
  }

  .ai-bionic-hand-massager__image-section-{{ ai_gen_id }} {
    position: sticky;
    top: 20px;
  }

  .ai-bionic-hand-massager__main-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    margin-bottom: 20px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-bionic-hand-massager__main-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-bionic-hand-massager__thumbnails-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 10px;
  }

  .ai-bionic-hand-massager__thumbnail-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    border-radius: {{ block.settings.thumbnail_border_radius }}px;
    overflow: hidden;
    cursor: pointer;
    border: 2px solid transparent;
    transition: border-color 0.3s ease;
  }

  .ai-bionic-hand-massager__thumbnail-{{ ai_gen_id }}.active {
    border-color: {{ block.settings.active_thumbnail_border_color }};
  }

  .ai-bionic-hand-massager__thumbnail-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-bionic-hand-massager__content-section-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
  }

  .ai-bionic-hand-massager__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    margin: 0 0 20px;
    color: {{ block.settings.title_color }};
  }

  .ai-bionic-hand-massager__price-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
  }

  .ai-bionic-hand-massager__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    font-weight: 700;
    color: {{ block.settings.price_color }};
  }

  .ai-bionic-hand-massager__compare-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.compare_price_size }}px;
    text-decoration: line-through;
    color: {{ block.settings.compare_price_color }};
    opacity: 0.7;
  }

  .ai-bionic-hand-massager__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.6;
    margin-bottom: 30px;
  }

  .ai-bionic-hand-massager__features-{{ ai_gen_id }} {
    margin-bottom: 30px;
  }

  .ai-bionic-hand-massager__features-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.features_title_size }}px;
    font-weight: 600;
    margin-bottom: 15px;
    color: {{ block.settings.features_title_color }};
  }

  .ai-bionic-hand-massager__features-list-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ai-bionic-hand-massager__feature-item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    margin-bottom: 12px;
    font-size: {{ block.settings.feature_item_size }}px;
  }

  .ai-bionic-hand-massager__feature-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    margin-top: 2px;
  }

  .ai-bionic-hand-massager__feature-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ block.settings.feature_icon_color }};
  }

  .ai-bionic-hand-massager__variant-selector-{{ ai_gen_id }} {
    margin-bottom: 25px;
  }

  .ai-bionic-hand-massager__variant-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.variant_label_size }}px;
    font-weight: 600;
    margin-bottom: 10px;
    display: block;
    color: {{ block.settings.variant_label_color }};
  }

  .ai-bionic-hand-massager__variant-options-{{ ai_gen_id }} {
