<script>
  (function() {
    class BionicHandMassager{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.thumbnails = this.querySelectorAll('.ai-bionic-hand-massager__thumbnail-{{ ai_gen_id }}');
        this.mainImage = this.querySelector('.ai-bionic-hand-massager__main-image-{{ ai_gen_id }}');
        this.variantOptions = this.querySelectorAll('.ai-bionic-hand-massager__variant-option-{{ ai_gen_id }}');
        this.quantityInput = this.querySelector('.ai-bionic-hand-massager__quantity-input-{{ ai_gen_id }}');
        this.quantityButtons = this.querySelectorAll('.ai-bionic-hand-massager__quantity-button-{{ ai_gen_id }}');

        this.setupThumbnails();
        this.setupVariants();
        this.setupQuantity();
      }

      setupThumbnails() {
        this.thumbnails.forEach((thumbnail) => {
          thumbnail.addEventListener('click', () => {
            this.thumbnails.forEach((t) => t.classList.remove('active'));
            thumbnail.classList.add('active');

            const img = thumbnail.querySelector('.ai-bionic-hand-massager__thumbnail-image-{{ ai_gen_id }}');
            if (img && this.mainImage) {
              this.mainImage.src = img.src.replace('width=200', 'width=800');
              this.mainImage.alt = img.alt;
            }
          });
        });
      }

      setupVariants() {
        this.variantOptions.forEach((option) => {
          option.addEventListener('click', () => {
            this.variantOptions.forEach((o) => o.classList.remove('selected'));
            option.classList.add('selected');
          });
        });
      }

      setupQuantity() {
        this.quantityButtons.forEach((button) => {
          button.addEventListener('click', () => {
            const action = button.getAttribute('data-action');
            let currentValue = parseInt(this.quantityInput.value) || 1;

            if (action === 'increase') {
              currentValue++;
            } else if (action === 'decrease' && currentValue > 1) {
              currentValue--;
            }

            this.quantityInput.value = currentValue;
          });
        });

        this.quantityInput.addEventListener('change', () => {
          let value = parseInt(this.quantityInput.value) || 1;
          if (value < 1) {
            value = 1;
          }
          this.quantityInput.value = value;
        });
      }
    }

    customElements.define('bionic-hand-massager-{{ ai_gen_id }}', BionicHandMassager{{ ai_gen_id }});
  })();
</script>

